{% block body %}

    {% for label, messages in app.flashes %}
        <div class="container">
            <div class="alert alert-{{label}}">
                {% for message in messages %}
                    <p>{{ message | raw }}</p>
                {% endfor %}
            </div>
        </div>
    {% endfor %}

    <div class="container mt-5">       
            <h1>Ajoutez des images à votre galerie</h1>

            {{ form_start(form) }}
            {{ form_widget(form) }}

            <button type="submit" class="btn btn-primary">Ajoutez l'image</button>
            <a href=" {{ path('users_show', {'slug': app.user.slug}) }} " class="btn btn-primary">Retour à ma galerie</a>
            {{ form_end(form) }}
            
    </div>
{% endblock %}

